<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2"><h2>Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.input :name, required: true %>
          <%= f.input :phone, required: true %>
          <%= f.label :birthday %>
          <%= f.date_field :birthday, required: true %>
          <%= f.input :role, required: true, as: :radio_buttons, collection: ['Owner', 'Professional'], wrapper: :vertical_radio_and_checkboxes %>
          <%= f.input :image %>
          <%= f.input :image_cache, as: :hidden %>
        </div>
        <div class="text-center" style="margin-bottom: 20px;">
          <%= f.submit value: "Sign up", class: "btn btn-blue"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
